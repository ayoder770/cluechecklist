<!doctype html>
<html lang="en-US">
<head>
<title>Taboo Game</title>
<link href="" rel="shortcut icon">
<link href="" rel="apple-touch-icon-precomposed">
<% include ../partials/global_header.ejs %> 
<link rel="stylesheet" type="text/css" href="/stylesheets/taboo_style.css" />
</head>
    
<div class="full_page">
  
<div id="turn_pick" class="turn_overlay">
    <div class="turn_button_cont">
        <div onclick="team_a_turn()" class="turn_button" style="margin-bottom:20px;">Team A Turn</div>
        
        <div onclick="team_a_turn()" class="turn_button">Team B Turn</div>
    </div>
</div>   
    
    <div class="twenty">
        <div class="inner_block"><div class="inner_text">Team A Has <span id="team_a_pts" class="">0</span> Points</div></div>
        <div class="inner_block"><div class="inner_text">Team B Has <span id="team_b_pts" class="">0</span> Points</div></div>
    </div> 
    
    <div class="forty team_a">
        <div class="inner_block clickable"><div onclick="add_pts()" class="inner_text team_name">+1</div></div>
        <div class="inner_block clickable"><div onclick="sub_pts()" class="inner_text team_name">-1</div></div>
    </div> 
    
    <div class="forty team_b">
        <div class="inner_block clickable"><div onclick="taboo_or_pass()" class="inner_text team_name">Pass</div></div>
        <div class="inner_block clickable"><div onclick="taboo_or_pass()" class="inner_text team_name">Taboo</div></div>
    </div> 
    
    <div class="twenty">
        <div style="height:100%;" class="inner_block"><div class="inner_text">Time:<br><span id="clock_time">60</span></div></div>
        
    </div> 

    
    
</div>   
    
    
<script type="text/javascript" src="/js/taboo_scripts.js" async defer></script>
    
<% include ../partials/global_footer.ejs %>