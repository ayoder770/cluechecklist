<!doctype html>
<html lang="en-US">
<head>
<title>Taboo Game</title>
<link href="" rel="shortcut icon">
<link href="" rel="apple-touch-icon-precomposed">
<% include ../partials/global_header.ejs %> 
<link rel="stylesheet" type="text/css" href="/stylesheets/taboo_style.css" />
</head>
    
<div class="full_page">
  
<div id="turn_pick" class="turn_overlay">
    <div class="turn_button_cont">
        <div onclick="team_a_turn()" class="turn_button" style="margin-bottom:20px;">Team A Turn</div>
        
        <div onclick="team_b_turn()" class="turn_button">Team B Turn</div>
    </div>
</div>
    
<div id="turn_over" class="turn_overlay turn_over_hide">
    <div class="turn_button_cont times_up_text">
        Time's Up!
    </div>
</div>
    <div class="twenty">
        <div class="inner_block" id="team_a_block"><div class="inner_text">Team A Has <span id="team_a_pts" class="">0</span> Points</div></div>
        <div class="inner_block" id="team_b_block"><div class="inner_text">Team B Has <span id="team_b_pts" class="">0</span> Points</div></div>
    </div> 
    
    <div class="team_a forty">
        <div class="inner_block clickable"><div onclick="add_pts()" class="inner_text team_name">+1</div></div>
        <div class="inner_block clickable"><div onclick="sub_pts()" class="inner_text team_name">-1</div></div>
    </div> 
    
    <div class="forty port">
        <div class="inner_block clickable port"><div onclick="taboo_or_pass()" class="inner_text">Pass</div></div>
        <div class="inner_block clickable port"><div onclick="taboo_or_pass()" class="inner_text">Taboo</div></div>
    </div> 
    
    <div class="twenty">
        <div class="inner_block new_game_button"><div class="inner_text">New Game</div></div>
        <div style="height:70%;font-size:20px;" class="inner_block"><div class="inner_text">Time:<br><span id="clock_time">60</span></div></div> 
        <div class="inner_block stop_button"><div class="inner_text">Stop</div></div>
    </div>   
</div>   
     
<script type="text/javascript" src="/js/taboo_scripts.js" async defer></script>
    
<% include ../partials/global_footer.ejs %>